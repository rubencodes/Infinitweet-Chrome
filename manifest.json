{
    "manifest_version": 2,

    "name": "Infinitweet Chrome",
    "description": "Infinitweet lets you write infinitely long tweets.",
    "version": "5.1.1",
		"browser_action": {
        "default_icon": "img/128.png",
        "default_popup": "app.html"
    },
    "background": {
      "scripts": [ "background.js" ],
      "persistent": false
    },
    "permissions": [
      "contextMenus",
      "https://ajax.googleapis.com/",
      "https://maxcdn.bootstrapcdn.com/"
    ],
    "icons": {
        "48":  "img/48.png",
        "128": "img/128.png"
    },
    "web_accessible_resources": [
      "/popup.html",
      "/loggedIn.html",
      "/loggedOut.html"
    ]
}