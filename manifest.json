{
    "manifest_version": 2,

    "name": "Infinitweet Chrome",
    "description": "Infinitweet Chrome lets you generate infinitely long tweets. Just type or paste in anything you want, export, and upload to Twitter!",
    "version": "5.0.1",
		"browser_action": {
        "default_icon": "img/128.png",
        "default_popup": "app.html"
    },
    "background": {
      "scripts": [ "js/infinitweet.js", "background.js" ],
      "persistent": false
    },
    "permissions": [
      "contextMenus",
      "https://ajax.googleapis.com/",
      "https://maxcdn.bootstrapcdn.com/"
    ],
    "icons": {
        "48":  "img/48.png",
        "128": "img/128.png"
    }
}